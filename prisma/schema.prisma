generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id            Int        @id @default(autoincrement())
  email         String
  firstName     String
  secondName    String
  country       String
  province      String
  city          String
  area          String
  address       String
  apartment     String?
  mobile        String
  secondNumber  String?
  postalCode    String?
  paymentMethod String
  totalAmount   Float
  totalQuantity Int
  createdAt     DateTime   @default(now())
  cartItems     CartItem[]
}

model CartItem {
  id        Int      @id @default(autoincrement())
  name      String
  quantity  Int
  price     Float
  orderId   Int
  createdAt DateTime @default(now())
  order     Order    @relation(fields: [orderId], references: [id])
}

model Review {
  id          Int      @id @default(autoincrement())
  name        String
  rating      Int
  description String?
  productId   Int
  createdAt   DateTime @default(now())
}
